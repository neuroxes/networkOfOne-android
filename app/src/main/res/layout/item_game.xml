<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="4dp"
    android:layout_marginBottom="8dp"
    app:cardBackgroundColor="?cardBackgroundColor"
    app:cardCornerRadius="@dimen/buttonRadius"
    app:cardUseCompatPadding="true"
    app:strokeWidth="0dp">

    <!-- Status Bar -->

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="20dp">


        <View
            android:id="@+id/statusBar"
            android:layout_width="0dp"
            android:layout_height="3dp"
            android:background="?colorButtonNormal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/gameIcon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="16dp"
            android:background="?cardBackgroundColor"
            android:src="@drawable/console_controller"
            app:contentPadding="12dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/statusBar"
            app:shapeAppearance="@style/ShapeAppearance.Material3.Corner.Full" />

        <TextView
            android:id="@+id/gameName"
            style="@style/textHeading.Small"
            android:layout_width="0dp"
            android:layout_marginHorizontal="12dp"
            android:maxLines="2"
            android:text="Study Lamp 220V (MultiColor) without bulb-color Family:Maroon"
            app:layout_constraintEnd_toStartOf="@id/moreOptions"
            app:layout_constraintStart_toEndOf="@id/gameIcon"
            app:layout_constraintTop_toTopOf="@id/gameIcon" />


        <TextView
            android:id="@+id/gameLocation"
            style="@style/textBody.Small"
            android:layout_width="0dp"
            android:layout_marginTop="2dp"
            android:drawableStart="@drawable/location_outlined"
            android:paddingVertical="4dp"
            android:text="Street 12, California, United States"
            app:layout_constraintEnd_toEndOf="@id/gameName"
            app:layout_constraintStart_toStartOf="@id/gameName"
            app:layout_constraintTop_toBottomOf="@id/gameName" />

        <TextView
            android:id="@+id/gameTime"
            style="@style/textBody.Small"
            android:text="12/08/2025 10:40 AM"
            android:layout_marginTop="4dp"
            app:drawableStartCompat="@drawable/ic_clock_15dp"
            app:layout_constraintStart_toStartOf="@id/gameName"
            app:layout_constraintTop_toBottomOf="@id/gameLocation" />

        <TextView
            android:id="@+id/gamePrice"
            style="@style/textHeading.Small"
            android:text="$250"
            app:layout_constraintEnd_toEndOf="@id/moreOptions"
            app:layout_constraintTop_toBottomOf="@id/gameLocation" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/moreOptions"
            style="@style/selectableIcon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="12dp"
            android:padding="1dp"
            android:src="@drawable/round_more_vert_24"
            app:contentPadding="6dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/gameName"
            app:layout_constraintTop_toTopOf="@id/gameName"
            app:strokeColor="?colorButtonNormal"
            app:strokeWidth="1dp" />

        <TextView
            android:id="@+id/gameStatusNote"
            style="@style/textHeading.NormalStyle.Small"
            android:layout_width="0dp"
            android:layout_margin="16dp"
            android:background="@drawable/outlined_10dp_round_simple"
            android:backgroundTint="@color/status_pending_bg"
            android:drawablePadding="8dp"
            android:textColor="@color/textColor"
            android:paddingHorizontal="16dp"
            android:gravity="center_vertical"
            android:paddingVertical="16dp"
            android:text="Game acceptance request is pending"
            app:drawableStartCompat="@drawable/round_access_alarm_24"
            app:drawableTint="@color/status_pending"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/gameTime" />


        <!-- <com.google.android.material.imageview.ShapeableImageView
             android:id="@+id/btnMore"
             style="@style/selectableIcon"
             android:layout_width="30dp"
             android:layout_height="30dp"
             android:layout_marginTop="0dp"
             android:src="@drawable/round_more_vert_24"
             app:contentPadding="6dp"
             app:layout_constraintBottom_toBottomOf="@id/txtRate"
             app:layout_constraintEnd_toEndOf="parent"
             app:layout_constraintStart_toEndOf="@id/txtRate"
             app:layout_constraintTop_toTopOf="@id/tvProductName"
             app:strokeWidth="1dp" />
     -->

            <!-- View Updates Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnAccept"
                style="@style/btn_lwm.outlined"
                android:layout_width="0dp"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="20dp"
                android:text="Accept"
                android:visibility="gone"
                app:icon="@drawable/check_circle"
                app:iconGravity="textStart"
                app:iconPadding="12dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/teamInfoCard" />

            <!-- Action Buttons -->

            <!-- Return Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/checkInBtn"
                style="@style/btn_lwm.outlined"
                android:layout_width="0dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="8dp"
                android:enabled="false"
                android:text="Check in"
                android:visibility="gone"
                app:icon="@drawable/round_check_24"
                app:layout_constraintEnd_toStartOf="@id/btnReqPay"
                app:layout_constraintStart_toStartOf="@id/btnAccept"
                app:layout_constraintTop_toBottomOf="@id/btnAccept" />

            <!-- Check In Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnReqPay"
                style="@style/btn_lwm_enable_disable"
                android:layout_width="0dp"
                android:layout_marginStart="8dp"
                android:enabled="false"
                android:lines="1"
                android:text="Request Payout"
                android:visibility="gone"
                app:icon="@drawable/sack_dollar"
                app:layout_constraintBottom_toBottomOf="@id/checkInBtn"
                app:layout_constraintEnd_toEndOf="@id/btnAccept"
                app:layout_constraintStart_toEndOf="@id/checkInBtn"
                app:layout_constraintTop_toTopOf="@id/checkInBtn" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>


    <View
        android:id="@+id/animator"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:transitionName="animator"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:paddingTop="15dp"
    tools:context=".home.HomeFragmentScheduler">


    <TextView
        android:id="@+id/tv_greeting"
        style="@style/textBody.Small"
        android:layout_marginStart="16dp"
        android:drawableEnd="@drawable/hand_wave_1_"
        android:gravity="center_vertical"
        android:text="Welcome"
        app:layout_constraintBottom_toTopOf="@id/tv_user_name"
        app:layout_constraintStart_toEndOf="@id/picHome"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/tv_user_name"
        style="@style/textHeading"
        android:layout_width="0dp"
        android:layout_marginHorizontal="16dp"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:text="Dear Admin"
        app:layout_constraintBottom_toBottomOf="@id/picHome"
        app:layout_constraintStart_toEndOf="@id/picHome"
        app:layout_constraintTop_toBottomOf="@id/tv_greeting"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintWidth_default="wrap" />
    <!--
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/ivLogout"
            style="@style/selectableIcon"
            app:layout_constraintBottom_toBottomOf="@id/picHome"
            app:layout_constraintEnd_toStartOf="@id/notification"
            app:layout_constraintTop_toTopOf="@id/picHome"
            android:layout_marginEnd="4dp"
            android:src="@drawable/round_logout_24" />-->

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/ivLogout"
        style="@style/selectableIcon"
        android:layout_marginEnd="16dp"
        android:src="@drawable/round_logout_24"
        app:layout_constraintBottom_toBottomOf="@id/picHome"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/picHome" />
    <!--

        <TextView
            android:id="@+id/noOfNotifications"
            app:layout_constraintEnd_toEndOf="@id/notification"
            app:layout_constraintTop_toTopOf="@id/notification"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_margin="5dp"
            android:background="@drawable/oval"
            android:backgroundTint="?colorPrimary"
            android:gravity="center"
            android:text="2"
            android:textColor="@color/white"
            android:textSize="10sp"
            android:visibility="gone" />
    -->


    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/picHome"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:clickable="true"
        android:focusable="true"
        android:scaleType="centerCrop"
        android:src="@drawable/user_bg"
        android:visibility="visible"
        app:contentPadding="4dp"
        app:layout_constraintBottom_toBottomOf="@id/tv_user_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_greeting"
        app:shapeAppearance="@style/ShapeAppearance.Material3.Corner.Full"
        app:tint="?colorSecondary" />

    <View
        android:id="@+id/div"
        style="@style/horizontal_divider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_user_name" />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/base"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:overScrollMode="never"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/div">


        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/animation"
            style="@style/loading_anim" />


    </androidx.core.widget.NestedScrollView>

    <View
        android:id="@+id/animator"
        android:layout_width="0dp"
        android:layout_height="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
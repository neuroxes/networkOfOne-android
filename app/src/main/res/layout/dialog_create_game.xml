<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/top_25dp_round"
    android:backgroundTint="?colorTertiary">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/ivBack"
        style="@style/backBtn"
        android:layout_marginEnd="4dp"
        android:src="@drawable/cross"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:strokeWidth="0dp" />


    <TextView
        android:id="@+id/tvHeading"
        style="@style/textHeading"
        android:layout_marginStart="20dp"
        android:text="Add New Game"
        app:layout_constraintBottom_toBottomOf="@id/ivBack"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/ivBack" />

    <View
        android:id="@+id/div"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="20dp"
        android:background="?colorButtonNormal"
        app:layout_constraintTop_toBottomOf="@id/tvHeading" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_default="wrap"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/div"
        app:layout_constraintVertical_bias="0">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="20dp">

            <TextView
                android:id="@+id/t3"
                style="@style/textHeading.Small"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:text="Title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/lay_game"
                style="@style/textInputLayout.NoHint"
                android:layout_width="0dp"
                android:layout_marginTop="10dp"
                app:layout_constraintEnd_toEndOf="@id/btnSave"
                app:layout_constraintStart_toStartOf="@id/t3"
                app:layout_constraintTop_toBottomOf="@id/t3">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_game_name"
                    style="@style/editTextOutlined_round"
                    android:drawableStart="@drawable/round_videogame_asset_24"
                    android:hint="Footbal"
                    android:inputType="textPersonName" />

            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/t1"
                style="@style/textHeading.Small"
                android:layout_marginStart="20dp"
                android:layout_marginTop="4dp"
                android:text="Location"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/lay_game" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/lay_location"
                style="@style/textInputLayout.NoHint"
                android:layout_width="0dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/t1"
                app:layout_constraintTop_toBottomOf="@id/t1">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_location"
                    style="@style/editTextOutlined_round"
                    android:drawableStart="@drawable/sharp_location_on_24"
                    android:hint="Street # 4, New York, USA"
                    android:paddingEnd="66dp"
                    android:inputType="textPersonName" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.button.MaterialButton
                style="@style/Widget.Material3.Button.Icon"
                android:layout_width="50dp"
                android:layout_height="55dp"
                android:id="@+id/btnCurrentLoc"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="5dp"
                android:backgroundTint="?colorPrimaryInverse"
                app:cornerRadius="16dp"
                app:icon="@drawable/outline_my_location_24"
                app:layout_constraintEnd_toEndOf="@id/lay_location"
                app:layout_constraintTop_toTopOf="@id/lay_location" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/midGuideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.5" />

            <!-- Row 1: City (Left) -->
            <TextView
                android:id="@+id/cityLabel"
                style="@style/textHeading.Small"
                android:layout_marginStart="20dp"
                android:layout_marginTop="8dp"
                android:text="Date"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/lay_location" />


            <TextView
                android:id="@+id/etDate"
                style="@style/textHeading.Small"
                android:layout_width="0dp"
                android:layout_height="52dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="6dp"
                android:background="@drawable/outlined_filled_round_bg"
                android:clickable="true"
                android:drawablePadding="12dp"
                android:focusable="true"
                android:gravity="center_vertical"
                android:hint="mm/dd/yyyy"
                android:paddingStart="14dp"
                app:drawableStartCompat="@drawable/calendar"
                app:layout_constraintEnd_toStartOf="@id/midGuideline"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cityLabel" />

            <!-- Row 1: State (Right) -->
            <TextView
                android:id="@+id/stateLabel"
                style="@style/textHeading.Small"
                android:layout_marginStart="6dp"
                android:text="Time"
                app:layout_constraintStart_toStartOf="@id/midGuideline"
                app:layout_constraintTop_toTopOf="@id/cityLabel" />


            <TextView
                android:id="@+id/etTime"
                style="@style/textHeading.Small"
                android:layout_width="0dp"
                android:layout_height="52dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/outlined_filled_round_bg"
                android:clickable="true"
                android:drawablePadding="12dp"
                android:focusable="true"
                android:gravity="center_vertical"
                android:hint="08:20 AM"
                android:paddingStart="14dp"
                app:drawableStartCompat="@drawable/ic_clock"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/stateLabel"
                app:layout_constraintTop_toBottomOf="@id/stateLabel" />


            <TextView
                android:id="@+id/t4"
                style="@style/textHeading.Small"
                android:layout_marginTop="16dp"
                android:text="Fee Amount"
                app:layout_constraintStart_toStartOf="@id/t1"
                app:layout_constraintTop_toBottomOf="@id/etDate" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/etLayPrice"
                style="@style/textInputLayout.NoHint"
                android:layout_width="0dp"
                android:layout_marginTop="10dp"
                app:layout_constraintEnd_toEndOf="@id/btnSave"
                app:layout_constraintStart_toStartOf="@id/t1"
                app:layout_constraintTop_toBottomOf="@id/t4">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etPrice"
                    style="@style/editTextOutlined_round"
                    android:drawableStart="@drawable/sack_dollar"
                    android:hint="100"
                    android:inputType="numberDecimal" />
            </com.google.android.material.textfield.TextInputLayout>


            <TextView
                android:id="@+id/reminder"
                style="@style/textHeading.NormalStyle"
                android:layout_marginTop="4dp"
                android:text="@string/special_note_optional"
                app:layout_constraintStart_toStartOf="@id/t1"
                app:layout_constraintTop_toBottomOf="@id/etLayPrice" />


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/etDescriptionLay"
                style="@style/textInputLayout.NoHint"
                android:layout_width="0dp"
                app:counterEnabled="true"
                app:counterMaxLength="400"
                app:layout_constraintEnd_toEndOf="@id/lay_location"
                app:layout_constraintStart_toStartOf="@id/lay_location"
                app:layout_constraintTop_toBottomOf="@id/reminder">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etDescription"
                    style="@style/editTextOutlined_round"
                    android:layout_height="wrap_content"
                    android:gravity="top|start"
                    android:hint="Provide a short note..."
                    android:inputType="textMultiLine"
                    android:lines="4" />
            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCancel"
                style="@style/btn_lwm.outlined"
                android:layout_width="0dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="12dp"
                android:layout_weight="1"
                android:text="Cancel"
                app:layout_constraintEnd_toStartOf="@id/btnSave"
                app:layout_constraintStart_toStartOf="@id/t1"
                app:layout_constraintTop_toBottomOf="@id/etDescriptionLay" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSave"
                style="@style/btn_lwm"
                android:layout_width="0dp"
                android:layout_marginEnd="20dp"
                android:layout_weight="1"
                android:text="Save"
                app:layout_constraintBottom_toBottomOf="@id/btnCancel"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/btnCancel"
                app:layout_constraintTop_toTopOf="@id/btnCancel" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>

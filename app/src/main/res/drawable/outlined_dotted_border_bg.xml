<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" android:exitFadeDuration="200">
    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <solid android:color="#22F29111" />
            <stroke android:width="1dp" android:color="?colorPrimary" android:dashWidth="3dp" android:dashGap="3dp" />
            <corners android:radius="@dimen/buttonRadius" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#44F29111" />
            <stroke android:width="1dp" android:color="?colorPrimary" android:dashWidth="5dp" android:dashGap="5dp" />
            <corners android:radius="@dimen/buttonRadius" />
        </shape>
    </item>

</selector>
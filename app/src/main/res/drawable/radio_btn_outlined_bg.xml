<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" android:exitFadeDuration="300">
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <solid android:color="?backgroundColor"/>
            <corners android:radius="@dimen/buttonRadius" />
            <stroke android:width="1dp" android:color="?colorPrimary" />
        </shape>
    </item>
    <item android:state_checked="false">
        <shape android:shape="rectangle">
            <solid android:color="?backgroundColor"/>
            <corners android:radius="@dimen/buttonRadius" />
            <stroke android:width="1dp" android:color="?colorButtonNormal" />
        </shape>
    </item>
</selector>
<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" android:exitFadeDuration="200">
    <item android:state_selected="true">
        <shape>
            <stroke android:width="1dp" android:color="?colorPrimary" />
            <corners android:radius="@dimen/buttonRadius" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape>
            <stroke android:width="1dp" android:color="?colorPrimary" />
            <corners android:radius="@dimen/buttonRadius" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape>
            <stroke android:width="1dp" android:color="?colorPrimary" />
            <corners android:radius="@dimen/buttonRadius" />
        </shape>
    </item>
    <item android:state_checkable="true">
        <shape>
            <stroke android:width="1dp" android:color="?colorPrimary" />
            <corners android:radius="@dimen/buttonRadius" />
        </shape>
    </item>
    <item>
        <shape>
            <stroke android:width="1dp" android:color="?colorButtonNormal" />
            <corners android:radius="@dimen/buttonRadius" />
        </shape>
    </item>
</selector>
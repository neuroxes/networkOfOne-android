<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.NETWORKOFONE" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/brand</item>
        <item name="colorSecondary">@color/textColorSecondaryAlt</item>
        <item name="backgroundColor">@color/darkBack</item>
        <item name="cardBackgroundColor">@color/cardBackground</item>
        <item name="colorOnBackground">@color/lightBack</item>
        <item name="android:windowBackground">?backgroundColor</item>
        <item name="android:navigationBarColor">?backgroundColor</item>
        <item name="colorOnSecondary">@color/blackLight</item>
        <item name="colorSecondaryContainer">?colorPrimary</item>
        <item name="colorPrimaryInverse">?colorOnBackground</item>
        <item name="colorTertiary">@color/btmNavDark</item>
        <item name="colorError">@color/colorError</item>
        <item name="colorAccent">?colorPrimary</item>

        <!--        Text Colors-->
        <item name="android:textColor">?colorOnBackground</item>
        <item name="android:textColorSecondary">@color/textColorSecondaryAlt</item>

        <item name="colorOnTertiary">@color/textColor</item>

        <!--        Status Bar Styling      -->
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:statusBarColor">?backgroundColor</item>

        <!--        Font Family !-->
        <item name="fontFamily">@font/average_sans</item>
        <item name="android:fontFamily">?fontFamily</item>

        <item name="android:ellipsize">end</item>
        <item name="android:includeFontPadding">false</item>

        <item name="colorControlActivated">?colorPrimaryInverse</item>

    </style>


    <style name="Theme.AuthenticationScreen" parent="Base.Theme.NETWORKOFONE">
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor">?colorPrimaryInverse</item>
    </style>


    <style name="Base.Theme.inCityStores.Home" parent="Base.Theme.NETWORKOFONE">
        <item name="android:navigationBarColor">?colorTertiary</item>
    </style>


</resources>